@model IEnumerable<CourseViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Courses</h5>
                <a asp-controller="Course" asp-action="Create" class="btn btn-primary mb-3">Create Course</a>
                @if (Model.Any())
                {
                    <table class="table table-stripted table-bordered">
                        <thead>
                        <tr>
                            <th>Picture</th>
                            <th>Course Name</th>
                            <th>Price</th>
                            <th>Duration</th>
                            <th>Category</th>
                            <th>Transactions</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model)
                        {
                            <td><img style="width:72px" src="@item.PhotoStockPicture" class="img-thumbnail"/></td>
                            <td>@item.Name</td>
                            <td>@item.Price</td>
                            <td>@item.Feature.Duration</td>
                            <td>@item.Category.Name</td>
                            <td>
                                <a asp-controller="Course" asp-action="Update" asp-route-courseId="@item.Id" class="btn btn-success btn-sm">Update</a>
                                <a asp-controller="Course" asp-action="Delete" asp-route-courseId="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-info"> Course Not Found!</div>
                }
            </div>
        </div>
    </div>
</div>