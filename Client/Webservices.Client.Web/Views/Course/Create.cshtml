
@{
    ViewData["Title"] = "Create";
}
@model CourseCreateInput
<h1>Create</h1>

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title"></h5>
                <form asp-controller="Course" asp-action="Create" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="mb-3">
                        <label asp-for="CategoryId" class="form-label"></label>
                        <select asp-for="CategoryId" asp-items="@ViewBag.categoryList" class="form-control">
                            <option value="">Select a Category</option>
                        </select>
                        <span class="text-danger" asp-validation-for="CategoryId"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-controll" />
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Price" class="form-label"></label>
                        <input asp-for="Price" class="form-controll" />
                        <span class="text-danger" asp-validation-for="Price"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-controll"></textarea>
                        <span class="text-danger" asp-validation-for="Description"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Feature.Duration" class="form-label"></label>
                        <input asp-for="Feature.Duration" class="form-controll" />
                        <span class="text-danger" asp-validation-for="Feature.Duration"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="PhotoFormFile"></label>
                        <input type="file" asp-for="PhotoFormFile" class="form-controll"/>
                    </div>
                    <button type="submit" class="btn btn-primary">Save</button>
                </form>
            </div>
        </div>
    </div>
</div>
